<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.Fragments">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragmentActivit"
        android:textSize="18sp"
        android:textStyle="bold" />

    <fragment
        android:id="@+id/headLineFragment"
        android:name="com.nhs.androidtutorial.fragments.HeadLineFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/articlefragment"
        android:name="com.nhs.androidtutorial.fragments.ArticleFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>